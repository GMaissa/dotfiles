#!/bin/bash

ssh() {
    TMPDIR=~/tmp
    if [ ! -d $TMPDIR ]; then
        mkdir $TMPDIR
    fi

    case "$(uname -s)" in
        Linux)
            tmp_fifo=$(mktemp -u --suffix=._ssh_fifo)
            ;;
        Darwin)
            tmp_fifo=$(mktemp -u -t ._ssh_fifo)
            ;;
        *)
            echo 'unsupported OS'
            exit
            ;;
    esac

    # cleanup first
    rm $TMPDIR/._ssh_fifo* 2>/dev/null

    mkfifo "$tmp_fifo" 
    cat ~/.ssh/config.* ~/.ssh/config >"$tmp_fifo" 2>/dev/null & 
    /usr/bin/ssh -A -F "$tmp_fifo" "$@"
    rm "$tmp_fifo"
}

ssh $*
